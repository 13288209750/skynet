<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hdg.dao.BasicDaoImpl">

    <select id="getIpCount" resultType="int" >
        select count(1) from t_ip
    </select>

    <select id="getIpAddress" parameterType="Map" resultType="IpAddress">
        select * from t_ip
        <if test="pageIndex >= 0 and pageSize > 0">
            LIMIT #{pageIndex} , #{pageSize}
        </if>
    </select>
</mapper>